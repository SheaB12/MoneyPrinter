import base64

# Input and output filenames
input_file = "google_sheets.json"
output_file = "google_sheets_b64.txt"

# Read and encode
with open(input_file, "rb") as f:
    encoded = base64.b64encode(f.read()).decode("utf-8")

# Write to output file
with open(output_file, "w") as f:
    f.write(encoded)

print(f"âœ… Base64-encoded key saved to {output_file}")
